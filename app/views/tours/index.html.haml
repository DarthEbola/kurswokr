%h1 Listing tours

%table
  %thead
    %tr
      %th Departure date
      %th Describe
      %th Tour days
      %th Add pay
      %th Troute
      %th
      %th
      %th

  %tbody
    - @tours.each do |tour|
      %tr
        %td= tour.departure_date
        %td= tour.describe
        %td= tour.tour_days
        %td= tour.add_pay
        %td= tour.troute
        %td= link_to 'Show', tour
        %td= link_to 'Edit', edit_tour_path(tour)
        %td= link_to 'Destroy', tour, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

